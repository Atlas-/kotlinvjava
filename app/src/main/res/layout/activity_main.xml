<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.poundcode.examples.kotlinvjava.MainActivity">


    <EditText
        android:id="@+id/reverse"
        android:minWidth="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/clickToReverse"
        android:layout_alignRight="@+id/clickToReverse" />

    <Button
        android:id="@+id/clickToReverse"
        android:text="@string/reverse_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reverse" />

    <TextView
        android:id="@+id/label"
        android:text="@string/output_label"
        android:labelFor="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/clickToReverse"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp" />
    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/label"
        android:layout_marginLeft="4dp"
        android:layout_alignBottom="@+id/label" />


</RelativeLayout>
